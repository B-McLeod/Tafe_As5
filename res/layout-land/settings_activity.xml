<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.as5_tictactoe.Game" >

    <!-- First Row -->

	   <Button
	       android:id="@+id/btn1"
	       android:layout_width="70dp"
	       android:layout_height="70dp"
	       android:layout_marginLeft="30dp"
	       android:layout_marginRight="5dp"
	       android:layout_marginTop="0dp"
	       android:text="@string/blank" />
	   
	    <Button
	        android:id="@+id/btn2"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_alignBaseline="@+id/btn1"
	        android:layout_toRightOf="@+id/btn1"
	        android:text="@string/blank" />
	    
	    <Button
	        android:id="@+id/btn3"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_alignBaseline="@+id/btn1"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/btn2"
	        android:text="@string/blank" />

	<!-- End First Row -->
	     
	<!-- Middle Row -->

	   <Button
	       android:id="@+id/btn4"
	       android:layout_width="70dp"
	       android:layout_height="70dp"
	       android:layout_alignLeft="@+id/btn1"
	       android:layout_below="@+id/btn1"
	       android:layout_marginRight="5dp"
	       android:layout_marginTop="5dp"
	       android:text="@string/blank" />
	   
	    <Button
	        android:id="@+id/btn5"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_alignBaseline="@+id/btn4"
	        android:layout_toRightOf="@+id/btn1"
	        android:text="@string/blank" />
	    
	    <Button
	        android:id="@+id/btn6"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_alignBaseline="@+id/btn4"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/btn5"
	        android:text="@string/blank" />

	<!-- End Middle Row -->
	  
	<!-- Bottom Row -->

	   <Button
	       android:id="@+id/btn7"
	       android:layout_width="70dp"
	       android:layout_height="70dp"
	       android:layout_alignLeft="@+id/btn1"
	       android:layout_below="@+id/btn4"
	       android:layout_marginRight="5dp"
	       android:layout_marginTop="5dp"
	       android:text="@string/blank" />
	   
	    <Button
	        android:id="@+id/btn8"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_alignBaseline="@+id/btn7"
	        android:layout_toRightOf="@+id/btn7"
	        android:text="@string/blank" />
	    
	    <Button
	        android:id="@+id/btn9"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_alignBaseline="@+id/btn7"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/btn8"
	        android:text="@string/blank" />

	<!-- End Bottom Row -->

<!-- New Game Button -->

<Button
    android:id="@+id/btnNewGame"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/lblGameMessage"
    android:text="@string/NewGame" />

<!-- Game Message -->

<TextView
    android:id="@+id/lblGameMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/btnNewGame"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="70dp"
    android:text="@string/blank"
    android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>